{% extends 'base.html.twig' %}

{% block title %}Respuestas Anteriores{% endblock %}

{% block body %}
<h1>Respuestas Anteriores</h1>

{% if respuestas is empty %}
    <p>No has respondido a ninguna pregunta aÃºn.</p>
{% else %}
    <ul>
        {% for respuesta in respuestas %}
            <li>
                <strong>Pregunta:</strong> {{ respuesta.pregunta.texto }}<br>
                <strong>Tu respuesta:</strong> 
                {% if respuesta.respuestaId == 1 %} {{ respuesta.pregunta.respuesta1 }}
                {% elseif respuesta.respuestaId == 2 %} {{ respuesta.pregunta.respuesta2 }}
                {% elseif respuesta.respuestaId == 3 %} {{ respuesta.pregunta.respuesta3 }}
                {% elseif respuesta.respuestaId == 4 %} {{ respuesta.pregunta.respuesta4 }}
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endif %}

<br>
<a href="{{ path('app_home') }}" class="btn btn-secondary">Volver al inicio</a>
{% endblock %}
